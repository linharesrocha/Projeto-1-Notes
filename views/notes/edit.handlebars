<a href="/">Voltar</a>
<h2>Editar nota: {{note.title}}</h2>
<form action="/notes/update" method="post">
    <input type="hidden" name="id" value="{{ note._id }}">
    <div class="mb-3">
        <label class="form-label" for="title">Título:</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="O que você pretende fazer?" value="{{note.title}}">
    </div>
    <div class="mb-3">
        <label class="form-label" for="description">Descrição:</label>
        <textarea class="form-control" id="description" name="description" placeholder="Descreva melhor esta nota...">{{ note.description }}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Editar nota</button>
</form>